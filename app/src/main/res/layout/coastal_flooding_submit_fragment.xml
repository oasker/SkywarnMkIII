<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Coastal Flooding Features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coastal_flood_title_tv"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:backgroundTint="@color/backgroundColor"
        android:background="@color/backgroundColor" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coastal_area_label_tv"
                android:layout_column="1"
                android:text="Coastal Area"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/coastal_area_field_tv"
                android:layout_column="2"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storm_surge_label_tv"
                android:layout_column="1"
                android:text="Storm Surge"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/storm_surge_field_tv"
                android:layout_column="2"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/first_floor_flood_label_tv"
                android:layout_column="1"
                android:text="Injuries"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/injuries_field_tv"
                android:layout_column="2"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rain_label_tv"
                android:layout_column="1"
                android:text="Fatalities"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fatalities_field_tv"
                android:layout_column="2"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
        </TableRow>

    </TableLayout>

</LinearLayout>