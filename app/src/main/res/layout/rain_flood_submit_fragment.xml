<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rain_flood_fragment_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:text="@string/rain_and_flooding_event"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rain_flood_fragment_tablelayout">

        <!-- RAIN   -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rain_label_tv"
                android:layout_column="1"
                android:text="@string/rain"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/rain_field_tv"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="numberDecimal"
                tools:ignore="LabelFor" />
        </TableRow>


        <!-- PRECIPITATION RATE-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/precip_rate_label_tv"
                android:layout_column="1"
                android:text="@string/precipRateLabel"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/precip_rate_field_tv"
                android:layout_column="2"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark"
                android:inputType="numberDecimal"
                tools:ignore="LabelFor" />
        </TableRow>


        <!--SMALL BODY FLOODING -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/river_flood_label_tv"
                android:layout_column="1"
                android:text="@string/comments"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/river_flood_field_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="text"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                tools:ignore="LabelFor" />
        </TableRow>

        <!--Creek/Stream FLOODING -->


        <!-- Street Flood -->

        <!-- Large River Flood -->


        <!-- Ice Jam Flood -->
    </TableLayout>
</LinearLayout>