<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/report_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/general_info_submit_title"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@color/backgroundColor" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- UserName-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_label_tv"
                    android:layout_column="1"
                    android:text="@string/username"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>


            <!-- WeatherEvent -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_event_label_tv"
                    android:layout_column="1"
                    android:text="@string/weather_event"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_event_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>

            <!-- Longitude -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitude_label_tv"
                    android:layout_column="1"
                    android:text="@string/longitude"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitude_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>

            <!-- Lattitude -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lattitude_label_tv"
                    android:layout_column="1"
                    android:text="@string/lattitude"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lattitude_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>

            <!-- Street  -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/street_label_tv"
                    android:layout_column="1"
                    android:text="@string/street"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/street_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>

            <!-- City -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_label_tv"
                    android:layout_column="1"
                    android:text="@string/city"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>

            <!-- State  -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/state_label_tv"
                    android:layout_column="1"
                    android:text="@string/state"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/state_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>


            <!-- Zip -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zip_label_tv"
                    android:layout_column="1"
                    android:text="@string/zip"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/zip_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>

            <!-- Comments -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments_label_tv"
                    android:layout_column="1"
                    android:text="@string/comments"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/comments_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>

            
            <!-- Current Temperature -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_temp_label_tv"
                    android:layout_column="1"
                    android:text="@string/current_temperature"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:layout_margin="3dp"
                    android:textColor="@android:color/background_dark" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_temp_field_tv"
                    android:layout_column="2"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/background_dark" />
            </TableRow>


        </TableLayout>
    </LinearLayout>

</LinearLayout>