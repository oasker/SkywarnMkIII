<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/winter_submit_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/winter_fragment_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/winter_features"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="22sp" />

    <TableLayout
        android:id="@+id/winter_fragment_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- SNOWFALL -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/snowfall_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="@string/snowfall"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/snowfall_field_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="number|numberDecimal"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
        </TableRow>


        <!-- SNOWFALL RATE-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/snowfall_rate_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:text="@string/snowfall_rate"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/snowfall_rate_field_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:inputType="number|numberDecimal"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
        </TableRow>

        <!--Freezing Rain Accum-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/freezing_rain_accum_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="@string/freezing_rain_accumulation"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/freezing_rain_accumulation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="number|numberDecimal"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
        </TableRow>


        <!--SNOW DEPTH -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/snow_depth_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:text="@string/snowfall_depth"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/snow_depth_field_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:inputType="number|numberDecimal"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
        </TableRow>

        <!--WATER EQUIVALENT -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/water_equiv_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="@string/water_equivalent"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/water_equiv_field_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="number|numberDecimal"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
        </TableRow>


        <!--FREEZING RAIN -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/freezing_rain_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="@string/freezing_rain"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/freezing_rain_field_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="text"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                tools:ignore="LabelFor" />
        </TableRow>


        <!--SLEET -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/sleet_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="@string/sleet"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/sleet_field_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="number|numberDecimal"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
        </TableRow>

        <!--BlowDrift -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/blowdrift_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="@string/blowdrift"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/blowdrift_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="text"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                tools:ignore="LabelFor" />
        </TableRow>


        <!--WHITEOUT -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/whiteout_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="@string/whiteout"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/whiteout_field_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="numberDecimal"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
        </TableRow>


        <!--THUNDERSNOW -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/thundersnow_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:text="@string/thundersnow"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/thundersnow_field_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:inputType="text"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>