<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="70dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:text="User Information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView32"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_margin="0dp"
                android:padding="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="6dp"
            android:minHeight="0dp">

            <TextView
                android:text="@string/username2"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/usernameTV" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:text="@string/call_sign1"
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView1555"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:padding="10dp" />
            <TextView
                android:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/callsignTV"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:padding="10dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:text="@string/spotter_id3"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5135"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:padding="10dp" />
            <TextView
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weatherSpotterTV"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:padding="10dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:text="@string/affiliation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_column="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/affiliationTV"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_column="1" />
        </TableRow>

    </TableLayout>
</LinearLayout>