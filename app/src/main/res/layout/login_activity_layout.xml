<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/login_relative_layout">


    <TextView

        android:text="Skywarn Weather Spotter Database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_title"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_above="@+id/login_email_tv"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_email_tv"
        android:hint="@string/email"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_password_tv"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <Button
            android:text="@string/login"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:id="@+id/login_button_text"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/login_with_fb_button"
            android:layout_alignEnd="@+id/login_with_fb_button"
            android:layout_height="63dp"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <Button
            android:text="@string/sign_up"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:id="@+id/signup_button"
            android:layout_margin="15dp" />

        <TextView
            android:text="@string/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_passwordTV"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_light" />

    </LinearLayout>

</LinearLayout>